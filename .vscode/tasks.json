{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "bazel-build",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "//${relativeFileDirname}:${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
        },
        {
            "label": "bazel-build-debug",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "-c",
                "dbg",
                "--copt=-g",
                "--strip=never",
                "//${relativeFileDirname}:${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}